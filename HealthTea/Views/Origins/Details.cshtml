@model Origin

@{
    ViewData["Title"] = "Ingredient Origin";
}

<div class="container origin-details-container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center">Details for @Model.Name</h1>
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" style="max-width: 150px" id="ImagePreview" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageUrl" class="control-label">Image</label>
                        <input asp-for="ImageUrl" class="form-control" readonly />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Name" class="control-label">Name</label>
                        <input asp-for="Name" class="form-control" readonly />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center mt-4">
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                        }
                        <a class="btn btn-outline-secondary text-black" asp-action="Index">Show All</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ImagePreview');
            output.src = $("#ImageUrl").val();
        });
    </script>
}
