@model Company

@{
    ViewData["Title"] = "Add Company";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="text-center">
                <h1>Add New Company</h1>
            </div>
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group text-center">
                            <img id="ImagePreview" class="rounded-circle img-thumbnail" style="max-width: 150px" />
                        </div>
                        <div class="form-group">
                            <label asp-for="ImageUrl" class="control-label">Company Logo</label>
                            <input asp-for="ImageUrl" class="form-control"/>
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">   
                            <label asp-for="Name" class="control-label">Company Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-4">
                            <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                            <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ImagePreview');
            var imageUrl = $("#ImageUrl").val();
            if (imageUrl) {
                output.src = URL.createObjectURL(event.target.files[0]);
            }

            $("#ImageUrl").on("change", function () {
                if (this.files && this.files[0]) {
                    output.src = URL.createObjectURL(this.files[0]);
                }
            });
        });
    </script>
}
