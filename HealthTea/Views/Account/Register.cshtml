@using HealthTea.Data.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Sign up";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-4">
                <div class="card-header primaryColor">
                    <h4 class="text-center text-white">Sign up for a new account</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            <span>@TempData["Error"]</span>
                        </div>
                    }

                    <form asp-action="Register">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="FullName" class="control-label">Full Name</label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="EmailAddress" class="control-label">Email Address</label>
                            <input asp-for="EmailAddress" class="form-control" />
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="Password" class="control-label">Password</label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center mt-4">
                            <button class="btn btn-primary btn-block primaryColor" type="submit">Sign up</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer greyColor">
                    <p class="text-center">Already have an account? <a asp-controller="Account" asp-action="Login">Log in</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
